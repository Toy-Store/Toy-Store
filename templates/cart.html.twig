{% extends 'home.html.twig' %}
{% block body %}
	<link rel="stylesheet" href="{{asset("styles/cart.css")}}"/>
	<section class="h-100 gradient-custom">
		{% for c in carts %}
			<div class="container py-5">
				<div class="row d-flex justify-content-center my-4">
					<div class="col-md-8">
						<div class="card mb-4">
							<div class="card-header py-3">
								<h5 class="mb-0">Added to cart</h5>
							</div>
							<div
								class="card-body">
								<!-- Single item -->
								<div class="row">
									<div
										class="col-lg-3 col-md-12 mb-4 mb-lg-0">
										<!-- Image -->
										<div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
											<a>
												<div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light" data-mdb-ripple-color="light">
													{% set img = c.image %}
													<img src="{{asset('uploads/'~img)}}" class="w-100"/>
												</div>
											</a>
										</div>
										<!-- Image -->
									</div>
									<div
										class="col-lg-5 col-md-6 mb-4 mb-lg-0">
										<!-- Data -->
										<p>
											<strong>Name:</strong>
											{{c.name}}</p>
										<p>
											<strong>Price:</strong>
											{{c.price}}</p>
										<p>
											<strong>Quantity:</strong>
											{{c.quantity}}</p>
										<li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
											<div>
												<strong>Total amount</strong>
											</div>
											<span>
												<strong>{{total}}</strong>
											</span>
										</li>
										<td>
										<a href="{{path('cart_delete',{'id':c.id})}}" type="button" class="btn btn-primary btn-lg btn-block">
											Remove
										</a>
										</td>
										<a type="button" class="btn btn-primary btn-lg btn-block">
											Go to checkout
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}
</section>{% endblock %}
